{
  "name": "vulpini-x",
  "version": "0.1.0",
  "description": "Vulpini X - Advanced Proxy Client",
  "license": "GPL-3.0",
  "author": "zayoka",
  "main": "electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\""
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.10",
    "recharts": "^3.6.0",
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.vulpini.x",
    "productName": "Vulpini X",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "!**/node_modules/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    }
  }
}

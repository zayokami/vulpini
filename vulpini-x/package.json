{
  "name": "vulpini-x",
  "version": "0.1.0",
  "description": "Vulpini X - Advanced Proxy Client",
  "license": "GPL-3.0",
  "author": "zayoka",
  "main": "electron/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"wait-on http://localhost:5173 && npm run electron\"",
    "dev:server": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:server\" \"wait-on http://localhost:5173 && npm run electron\""
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.vulpini.x",
    "productName": "Vulpini X",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "!**/node_modules/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    }
  }
}
